<div class="jumbotron text-center">
  <div class="overlay">
  </div>
  <div class="background-image">
  </div>
  <div class="caption">
    <h1>Mongo Scraper</h1>
    <p>New York Times Edition</p>
  </div>
</div>

<div class="col-md-12">
        {{#if article}}
            {{#each article}}
            <div class="card mb-3 ">
                <div class="card-heading bg-primary text-light">
                  <div class="row m-2">
                    <div class="col-10 mt-3">
                      <h2>{{this.title}}</h2>
                    </div>
                    <div class="col-2 mt-1">
                      <button type="button" class="btn btn-success save" data-id={{this._id}}>Save Article</button>
                    </div>
                  </div>
                </div>
                <div class="card-body">
                    <p> {{this.summary}}</p>
                    <a href={{this.link}} target="_blank">{{this.link}}</a>
                    <br><br>
                    
                </div>
            </div>
            {{/each}}
        {{else}}
        <div class="card">
            <div class="card-body">
            <h4>Uh Oh. Looks like we don't have any new articles.</h4>
            </div>
         </div>
        {{/if}}
    </div>

<footer class="footer">
  <div class="container">
    <p>New York Times Mongo Scraper</p>
  </div>
</footer>